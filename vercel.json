{
  "builds": [
    {
      "src": "backend/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/", "dest": "/frontend/passenger.html" },
    { "src": "/frontend/(.*)", "dest": "/frontend/$1" },
    { "src": "/(.*)", "dest": "backend/main.py" }
  ]
}
